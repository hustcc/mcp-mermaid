{
  "name": "mcp-mermaid",
  "description": "❤️ Generate mermaid diagram and chart with AI MCP dynamically.",
  "version": "0.4.0",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "biome check .",
    "lint:fix": "biome check --write . && biome format --write . && biome lint --write .",
    "prebuild": "rimraf build",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "start": "npx @modelcontextprotocol/inspector node build/index.js",
    "start:sse": "node build/index.js --transport sse --port 3033",
    "start:streamable": "node build/index.js --transport streamable --port 1122",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "postinstall": "playwright install --with-deps chromium"
  },
  "bin": {
    "mcp-mermaid": "./build/index.js"
  },
  "files": ["build"],
  "keywords": ["mcp", "mermaid", "data-visualization", "chart", "diagram"],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mermaid-isomorphic": "^3.0.4",
    "playwright": "^1.52.0",
    "zod": "^3.25.16",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@modelcontextprotocol/inspector": "^0.17.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.21",
    "@types/sinon": "^21.0.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "axios": "^1.13.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "rimraf": "^6.1.2",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "biome check --write --files-ignore-unknown=true",
      "biome format --write --files-ignore-unknown=true"
    ],
    "*.json": ["biome format --write --files-ignore-unknown=true"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hustcc/mcp-mermaid"
  },
  "license": "MIT"
}
